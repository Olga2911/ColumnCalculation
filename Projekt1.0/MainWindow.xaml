<Window x:Class="Projekt1._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt1._0"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="200">
    <Window.Resources>
        <local:Column x:Key="column"/>
    </Window.Resources>
    <Border Padding="5">
        <StackPanel>
            <!--Charakterystyka przekroju-->
            <TextBlock Margin="0 5" Text="Charakterystyka przekroju" FontWeight="Bold"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock  Margin="5 2 5 2" Text="b=" />
                     <TextBlock Margin="5 2 5 2" Text="h=" />
                     <TextBlock Margin="5 2 5 2" Text="A=" />
                </StackPanel>

                <StackPanel Grid.Column="1" >
                    <TextBox Background="Beige" Margin="5 2 5 2" Text="{Binding CrossSectionCharacteristic.Width, Source={StaticResource column}}"/>
                    <TextBox Background="Beige" Margin="5 2 5 2" Text="{Binding CrossSectionCharacteristic.Height, Source={StaticResource column}}" />
                    <TextBox Background="Green" Margin="5 2 5 2"  IsReadOnly="true" Text="{Binding CrossSectionCharacteristic.AreaConcrete, Mode=OneWay, Source={StaticResource column}}" />
                </StackPanel>

                <StackPanel Grid.Column="2" >
                    <TextBlock Margin="5 2 5 2" Text="[m]" />
                    <TextBlock Margin="5 2 5 2" Text="[m]"/>
                    <TextBlock Margin="5 2 5 2" Text="[m&#x00B2;]" />
                    <Button  Margin="5 15 5 5" Content="Oblicz" Grid.Column="2" Command="{Binding Calculate, Mode=OneWay, Source={StaticResource column}}" CommandParameter="{DynamicResource column}" />
                </StackPanel>

            </Grid>

        </StackPanel>
    </Border>
</Window>
