<Window x:Class="Projekt1._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt1._0"
        mc:Ignorable="d"
        Title="Słup" Height="700" Width="350">
    <Window.Resources>
        <local:Project x:Key="project"/>
    </Window.Resources>
    <Border Padding="10">
        <StackPanel>
            <!--Parametry przekroju-->

            <TextBlock Margin="0 0 0 0" Text="PARAMETRY PRZEKROJU" FontWeight="Bold"/>
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="1.2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Margin="5 4 5 2" Text="Beton" />
                    <TextBlock Margin="5 4 5 2" Text="Stal" />
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <ComboBox ItemsSource="{Binding Column.Concrete.ClassesOfConcrete, Source={StaticResource project}}" SelectedIndex="0" SelectedItem="{Binding Column.Concrete.ConcreteClassDescription, Source={StaticResource project}}" />
                    <ComboBox   Margin="0 5 0 0" ItemsSource="{Binding Column.Steel.ClassesOfSteel, Source={StaticResource project}}"  SelectedItem="{Binding Column.Steel.SteelClassDescription, Source={StaticResource project}}"  />
                </StackPanel>

                <StackPanel Grid.Column="3" Height="49" Margin="0,0,0.333,-0.333" VerticalAlignment="Bottom">
                    <Button  Content="Beton..." Width="60" Command="{Binding Column.ViewMaterialParameters, Source={StaticResource project}}" CommandParameter="{DynamicResource project}" />
                    <Button Margin="0 8 0 0" Content="Stal..." Width="60" Command="{Binding Column.ViewSteelParameters, Source={StaticResource project}}" CommandParameter="{DynamicResource project}"/>
                </StackPanel>
            </Grid>


            <!--Geometria przekroju-->
            <TextBlock Margin="0 10 0 0" Text="GEOMETRIA PRZEKROJU" FontWeight="Bold"/>
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>


                <StackPanel Grid.Column="2">
                    <!--<ComboBox Margin=" 0 5 0 0" ItemsSource="{Binding SectionType.ArraySectionType, Source={StaticResource column}}" SelectedIndex="1" IsSynchronizedWithCurrentItem="True" SelectedItem="{Binding Concrete.ConcreteClassDescription, Source={StaticResource column}}"   />-->
                </StackPanel>
            </Grid>

            <!--<Image Width="100" Source="{Binding SectionType.PathToDraw, Source={StaticResource column}}"/>-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="1.2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions> 

                <StackPanel Grid.Column="1">
                    <TextBlock  Margin="5 4 5 2" Text="b=" />
                    <TextBlock Margin="5 4 5 2" Text="h=" />
                    <TextBlock Margin="5 4 5 2" Text="A=" />
                </StackPanel>

                <StackPanel Grid.Column="2" Height="154" Margin="0.333,0,0,0" VerticalAlignment="Bottom" >
                    <TextBox Background="Beige" Margin="5 2 5 2" Text="{Binding Column.SectionDimensions.Width, Source={StaticResource project}}" />
                    <TextBox Background="Beige" Margin="5 2 5 2" Text="{Binding Column.SectionDimensions.Height, Source={StaticResource project}}" />
                    <TextBox Background="Beige" Margin="5 2 5 2" Text="{Binding BasicParameters.AreaConcrete, Mode=OneWay, Source={StaticResource project}}"  />
                </StackPanel>

                <StackPanel Grid.Column="3" >
                    <TextBlock Margin="5 4 5 2" Text="[m]" />
                    <TextBlock Margin="5 4 5 2" Text="[m]"/>
                    <TextBlock Margin="5 4 5 2" Text="[m]" />
                </StackPanel>

            </Grid>
            <!--Statyka-->
            <TextBlock Margin="0 5" Text="Statyka" FontWeight="Bold"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="1.2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock  Margin="5 4 5 2" Text="Wysokość słupa: " />
                    <TextBlock Margin="5 4 5 2" Text="Siła ściskająca: " />
                    <TextBlock  Margin="5 4 5 2" Text="Moment zginający: " />
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock  Margin="5 4 5 2" Text="Lcol= " />
                    <TextBlock Margin="5 4 5 2" Text="N= " />
                    <TextBlock  Margin="5 4 5 2" Text="M= " />
                </StackPanel>

                <StackPanel Grid.Column="2" >
                    <TextBox Background="beige" Margin="5 2 5 2" Text="{Binding Column.Statics.ColumnHeight, Source={StaticResource project}}"  />
                    <TextBox Background="beige" Margin="5 2 5 2" Text="{Binding Column.Statics.CompressiveForce, Source={StaticResource project}}"  />
                    <TextBox Background="beige" Margin="5 2 5 2" Text="{Binding Column.Statics.BendingMoment, Source={StaticResource project}}"  />
                </StackPanel>

                <StackPanel Grid.Column="3" >
                    <TextBlock Margin="5 4 5 2" Text="[m]" />
                    <TextBlock Margin="5 4 5 2" Text="[kN]"/>
                    <TextBlock Margin="5 4 5 2" Text="[kNm]"/>
                </StackPanel>
            </Grid>

            <!--Wyznaczenie mimośrodów-->
            <TextBlock Margin="0 5" Text="Wyznaczenie mimośrodów" FontWeight="Bold"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="1.2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock  Margin="5 4 5 2" Text="Statyczny: " />
                    <TextBlock Margin="5 4 5 2" Text="Niezamierzony: " />
                    <TextBlock  Margin="5 4 5 2" Text="Początkowy: " />
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock  Margin="5 4 5 2" Text="ee= " />
                    <TextBlock Margin="5 4 5 2" Text="ea= " />
                    <TextBlock  Margin="5 4 5 2" Text="e0= " />
                </StackPanel>

                <StackPanel Grid.Column="2" >
                    <!--<TextBox Background="Beige" Margin="5 2 5 2" Text="{Binding CheckEccentricity.EE, Mode=OneWay, Source={StaticResource column}}"   />
                    <TextBox Background="Beige" Margin="5 2 5 2" Text="{Binding CheckEccentricity.EA, Mode=OneWay, Source={StaticResource column}}"   />
                    <TextBox Background="Beige" Margin="5 2 5 2" Text="{Binding CheckEccentricity.E0, Mode=OneWay, Source={StaticResource column}}"   />-->
                </StackPanel>

                <StackPanel Grid.Column="3" >
                    <TextBlock Margin="5 4 5 2" Text="[cm]" />
                    <TextBlock Margin="5 4 5 2" Text="[cm]"/>
                    <TextBlock Margin="5 4 5 2" Text="[cm]"/>

                </StackPanel>

                <StackPanel >
                    <TextBlock Text="{Binding Column.Statics.ColumnHeight, Source={StaticResource project}}" HorizontalAlignment="Right" Margin="0,0,-0.333,0" Width="77"/>
                </StackPanel>
                
            </Grid>



        </StackPanel>
    </Border>
</Window>
