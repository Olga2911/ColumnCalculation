<Window x:Class="Projekt1._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt1._0"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="350">
    <Window.Resources>
        <local:Column x:Key="column"/>
    </Window.Resources>
    <Border Padding="5">
        <StackPanel>
            <!--Charakterystyka przekroju-->
            
            <TextBlock Margin="0 5" Text="Charakterystyka przekroju" FontWeight="Bold"/>
            <ComboBox Width="150" ItemsSource="{Binding SectionType.ArraySectionType, Source={StaticResource column}}" SelectedIndex="0" IsSynchronizedWithCurrentItem="True" SelectedItem="{Binding SectionType.Section, Source={StaticResource column}}"  />
            <Image Width="80" Source="{Binding SectionType.PathToDraw, Source={StaticResource column}}"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock  Margin="5 4 5 2" Text="Szerokość przekroju:" />
                    <TextBlock Margin="5 4 5 2" Text="Wysokość przekroju: " />
                    <TextBlock Margin="5 4 5 2" Text="Średnica przekroju: " />
                    <TextBlock Margin="5 4 5 2" Text="n=" />
                    <TextBlock Margin="5 4 5 2" Text="fi=" />
                    <TextBlock Margin="5 4 5 2" Text="As1=" />
                    <TextBlock Margin="5 4 5 2" Text="A=" />
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock  Margin="5 4 5 2" Text="b=" />
                     <TextBlock Margin="5 4 5 2" Text="h=" />
                    <TextBlock Margin="5 4 5 2" Text="d=" />
                     <TextBlock Margin="5 4 5 2" Text="n=" />
                    <TextBlock Margin="5 4 5 2" Text="fi=" />
                    <TextBlock Margin="5 4 5 2" Text="As1=" />
                    <TextBlock Margin="5 4 5 2" Text="A=" />
                </StackPanel>

                <StackPanel Grid.Column="2" >
                    <TextBox Background="Beige" Margin="5 2 5 2" Text="{Binding CrossSectionCharacteristic.Width, Source={StaticResource column}}"/>
                    <TextBox Background="Beige" Margin="5 2 5 2" Text="{Binding CrossSectionCharacteristic.Height, Source={StaticResource column}}" />
                    <TextBox Background="Beige" Margin="5 2 5 2"  />
                    <TextBox Background="Beige" Margin="5 2 5 2" Text="{Binding CrossSectionCharacteristic.CountAs1, Source={StaticResource column}}"  />
                    <TextBox Background="Beige" Margin="5 2 5 2" Text="{Binding CrossSectionCharacteristic.FiAs1, Source={StaticResource column}}" />
                    <TextBox Background="Green" Margin="5 2 5 2" IsReadOnly="True" Text="{Binding CrossSectionCharacteristic.AreaAs1, Mode=OneWay, Source={StaticResource column}, StringFormat={}{0:n2}}"  />
                    <TextBox Background="Green" Margin="5 2 5 2"  IsReadOnly="true" Text="{Binding CrossSectionCharacteristic.AreaConcrete, Mode=OneWay, Source={StaticResource column}, StringFormat={}{0:n2}}" />
                </StackPanel>

                <StackPanel Grid.Column="3" >
                    <TextBlock Margin="5 4 5 2" Text="[m]" />
                    <TextBlock Margin="5 4 5 2" Text="[m]"/>
                    <TextBlock Margin="5 4 5 2" Text="[m]"/>
                    <TextBlock Margin="5 4 5 2" Text="[szt.]" />
                    <TextBlock Margin="5 4 5 2" Text="[mm]" />
                    <TextBlock Margin="5 4 5 2" Text="[mm&#x00B2;]" />
                    <TextBlock Margin="5 4 5 2" Text="[m&#x00B2;]" />
                </StackPanel>

            </Grid>
            <!--Statyka-->
            <TextBlock Margin="0 5" Text="Statyka" FontWeight="Bold"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock  Margin="5 4 5 2" Text="L=" />
                    <TextBlock Margin="5 4 5 2" Text="P=" />
                    
                </StackPanel>

                <StackPanel Grid.Column="1" >
                    <TextBox Background="Beige" Margin="5 2 5 2" Text="{Binding Statics.ColumnHeight, Source={StaticResource column}}"  />
                    <TextBox Background="Beige" Margin="5 2 5 2" Text="{Binding Statics.CompressiveForce, Source={StaticResource column}}"  />
                    
                </StackPanel>

                <StackPanel Grid.Column="2" >
                    <TextBlock Margin="5 4 5 2" Text="[m]" />
                    <TextBlock Margin="5 4 5 2" Text="[kN]"/>
                    <Button  Margin="5 15 5 5" Content="Oblicz" Grid.Column="2" Command="{Binding Calculate, Mode=OneWay, Source={StaticResource column}}" CommandParameter="{DynamicResource column}" />
                </StackPanel>

            </Grid>



        </StackPanel>
    </Border>
</Window>
