<Window x:Class="Projekt1._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt1._0"
        mc:Ignorable="d"
        Title="Słup" Height="700" Width="350">
    <Window.Resources>
        <local:Column x:Key="column"/>
    </Window.Resources>
    <Border Padding="5">
        <StackPanel>
            <!--Dane materiałowe-->
            <Border Padding="5">
                
            </Border>
            <TextBlock Margin="0 0" Text="Dane materiałowe" FontWeight="Bold"/>
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="1.2*" />
                    <ColumnDefinition Width="*" />

                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Margin="5 4 5 2" Text="Beton:" />
                    <TextBlock Margin="5 4 5 2" Text="Stal:" />
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <ComboBox ItemsSource="{Binding Concrete.ClassesOfConcrete, Source={StaticResource column}}"  SelectedIndex="1" SelectedItem="{Binding Concrete.ConcreteClassDescription, Source={StaticResource column}}" />
                    <ComboBox   Margin="0 5 0 0" ItemsSource="{Binding Steel.ClassesOfSteel, Source={StaticResource column}}" SelectedIndex="3" />
                </StackPanel>

                <StackPanel Grid.Column="3">
                    <Button  Content="Beton..." Width="60" Command="{Binding ViewMaterialParameters, Source={StaticResource column}}" CommandParameter="{DynamicResource column}" />
                    <Button Margin="0 8 0 0" Content="Stal..." Width="60"/>
                </StackPanel>
            </Grid>


            <!--Geometria przekroju-->
            <TextBlock Margin="0 5" Text="Geometria przekroju" FontWeight="Bold"/>
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Margin="5 4 5 2" Text="Przekrój:" />
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <ComboBox Margin=" 0 5 0 0" ItemsSource="{Binding SectionType.ArraySectionType, Source={StaticResource column}}" SelectedIndex="1" IsSynchronizedWithCurrentItem="True" SelectedItem="{Binding Concrete.ConcreteClassDescription, Source={StaticResource column}}"   />
                </StackPanel>
            </Grid>

            <Image Width="100" Source="{Binding SectionType.PathToDraw, Source={StaticResource column}}"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="1.2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Margin="5 4 5 2" Text="Szerokość:" IsEnabled="{Binding SectionType.IsProstokatnySection, Mode=OneWay, Source={StaticResource column}}" />
                    <TextBlock Margin="5 4 5 2" Text="Wysokość: " IsEnabled="{Binding SectionType.IsProstokatnySection, Mode=OneWay, Source={StaticResource column}}" />
                    <TextBlock Margin="5 4 5 2" Text="Średnica: " IsEnabled="{Binding SectionType.IsKolowySection, Mode=OneWay, Source={StaticResource column}}" />
                    <TextBlock Margin="5 4 5 2" Text="Otulina: " />
                    <TextBlock Margin="5 4 5 2" Text="Średnica zbr:" />
                    <TextBlock Margin="5 4 5 2" Text="Pole zbrojenia" />
                    <TextBlock Margin="5 4 5 2" Text="Pole betonu" />
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock  Margin="5 4 5 2" Text="b=" IsEnabled="{Binding SectionType.IsProstokatnySection, Mode=OneWay, Source={StaticResource column}}" />
                    <TextBlock Margin="5 4 5 2" Text="h=" IsEnabled="{Binding SectionType.IsProstokatnySection, Mode=OneWay, Source={StaticResource column}}" />
                    <TextBlock Margin="5 4 5 2" Text="d=" IsEnabled="{Binding SectionType.IsKolowySection, Mode=OneWay, Source={StaticResource column}}" />
                    <TextBlock Margin="5 4 5 2" Text="c=" />
                    <TextBlock Margin="5 4 5 2" Text="fi=" />
                    <TextBlock Margin="5 4 5 2" Text="As1=" />
                    <TextBlock Margin="5 4 5 2" Text="A=" />
                </StackPanel>

                <StackPanel Grid.Column="2" Height="154" Margin="0.333,0,0,0" VerticalAlignment="Bottom" >
                    <TextBox Background="Beige" Margin="5 2 5 2" IsEnabled="{Binding SectionType.IsProstokatnySection, Mode=OneWay, Source={StaticResource column}}" Text="{Binding CrossSectionCharacteristic.Width, Source={StaticResource column}}"/>
                    <TextBox Background="Beige" Margin="5 2 5 2" IsEnabled="{Binding SectionType.IsProstokatnySection, Mode=OneWay, Source={StaticResource column}}" Text="{Binding CrossSectionCharacteristic.Height, Source={StaticResource column}}" />
                    <TextBox Background="Beige" Margin="5 2 5 2" IsEnabled="{Binding SectionType.IsKolowySection, Mode=OneWay, Source={StaticResource column}}" Text="{Binding CrossSectionCharacteristic.Diameter, Source={StaticResource column}}"  />
                    <TextBox Background="Beige" Margin="5 2 5 2" Text="{Binding CrossSectionCharacteristic.Cover, Source={StaticResource column}}"  />
                    <TextBox Background="Beige" Margin="5 2 5 2" Text="{Binding CrossSectionCharacteristic.FiAs1, Source={StaticResource column}}" />
                    <TextBox Background="Green" Margin="5 2 5 2" IsReadOnly="True" Text="{Binding CrossSectionCharacteristic.AreaAs1, Mode=OneWay, Source={StaticResource column}, StringFormat={}{0:n2}}"  />
                    <TextBox Background="Green" Margin="5 2 5 2"  IsReadOnly="true" Text="{Binding CrossSectionCharacteristic.AreaConcrete, Mode=OneWay, Source={StaticResource column}, StringFormat={}{0:n2}}" />
                </StackPanel>

                <StackPanel Grid.Column="3" >
                    <TextBlock Margin="5 4 5 2" Text="[m]" />
                    <TextBlock Margin="5 4 5 2" Text="[m]"/>
                    <TextBlock Margin="5 4 5 2" Text="[m]"/>
                    <TextBlock Margin="5 4 5 2" Text="[m]" />
                    <TextBlock Margin="5 4 5 2" Text="[mm]" />
                    <TextBlock Margin="5 4 5 2" Text="[mm&#x00B2;]" />
                    <TextBlock Margin="5 4 5 2" Text="[m&#x00B2;]" />
                </StackPanel>

            </Grid>
            <!--Statyka-->
            <TextBlock Margin="0 5" Text="Statyka" FontWeight="Bold"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="1.2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock  Margin="5 4 5 2" Text="Wysokość słupa: " />
                    <TextBlock Margin="5 4 5 2" Text="Siła ściskająca: " />
                    <TextBlock  Margin="5 4 5 2" Text="Moment zginający: " />
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock  Margin="5 4 5 2" Text="Lcol= " />
                    <TextBlock Margin="5 4 5 2" Text="N= " />
                    <TextBlock  Margin="5 4 5 2" Text="M= " />
                </StackPanel>

                <StackPanel Grid.Column="2" >
                    <TextBox Background="Beige" Margin="5 2 5 2" Text="{Binding Statics.ColumnHeight, Source={StaticResource column}}"  />
                    <TextBox Background="Beige" Margin="5 2 5 2" Text="{Binding Statics.CompressiveForce, Source={StaticResource column}}"  />
                    <TextBox Background="Beige" Margin="5 2 5 2" Text="{Binding Statics.BendingMoment, Source={StaticResource column}}"  />
                </StackPanel>

                <StackPanel Grid.Column="3" >
                    <TextBlock Margin="5 4 5 2" Text="[m]" />
                    <TextBlock Margin="5 4 5 2" Text="[kN]"/>
                    <TextBlock Margin="5 4 5 2" Text="[kNm]"/>
                </StackPanel>
            </Grid>

            <!--Wyznaczenie mimośrodów-->
            <TextBlock Margin="0 5" Text="Wyznaczenie mimośrodów" FontWeight="Bold"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="1.2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock  Margin="5 4 5 2" Text="Statyczny: " />
                    <TextBlock Margin="5 4 5 2" Text="Niezamierzony: " />
                    <TextBlock  Margin="5 4 5 2" Text="Początkowy: " />
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock  Margin="5 4 5 2" Text="ee= " />
                    <TextBlock Margin="5 4 5 2" Text="ea= " />
                    <TextBlock  Margin="5 4 5 2" Text="e0= " />
                </StackPanel>

                <StackPanel Grid.Column="2" >
                    <TextBox Background="Beige" Margin="5 2 5 2" Text="{Binding CheckEccentricity.EE, Mode=OneWay, Source={StaticResource column}}"   />
                    <TextBox Background="Beige" Margin="5 2 5 2" Text="{Binding CheckEccentricity.EA, Mode=OneWay, Source={StaticResource column}}"   />
                    <TextBox Background="Beige" Margin="5 2 5 2" Text="{Binding CheckEccentricity.E0, Mode=OneWay, Source={StaticResource column}}"   />
                </StackPanel>

                <StackPanel Grid.Column="3" >
                    <TextBlock Margin="5 4 5 2" Text="[cm]" />
                    <TextBlock Margin="5 4 5 2" Text="[cm]"/>
                    <TextBlock Margin="5 4 5 2" Text="[cm]"/>

                    <Button  Margin="5 15 5 5" Content="Oblicz" Grid.Column="2" Command="{Binding Calculate, Mode=OneWay, Source={StaticResource column}}" CommandParameter="{DynamicResource column}" />
                </StackPanel>

            </Grid>



        </StackPanel>
    </Border>
</Window>
