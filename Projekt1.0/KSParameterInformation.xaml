<Window x:Class="Projekt1._0.KSParameterInformation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt1._0"
        mc:Ignorable="d"
        Title="KSParameterInformation" Height="175" Width="235">
    
    
    <Border BorderBrush="CadetBlue" BorderThickness="1" Padding="0" Margin="5">

        <StackPanel Background="MintCream">
            <!--WSPÓŁCZYNNIK KS-->
            <TextBlock Margin="5 0 5 2" FontSize="12" FontWeight="Bold">
              WSPÓŁCZYNNIK K<Run FontSize="7" BaselineAlignment="Subscript">s</Run>
            </TextBlock>

            <TextBlock TextWrapping="Wrap" FontSize="9" Margin="5 0 5 0">
                     jest to współczynnik zależny od udziału zbrojenia. 
            </TextBlock>
            
            <TextBlock TextWrapping="Wrap" FontSize="9" Margin="5 3 5 0">
                      W uproszczeniu można przyjąć:
            </TextBlock>

            <TextBlock TextWrapping="Wrap" FontSize="9" Margin="5 2 5 2">
                     1. dla ρ≥0,002, K<Run FontSize="7" BaselineAlignment="Subscript">s</Run>=1,0,
            </TextBlock>

            <TextBlock TextWrapping="Wrap" FontSize="9" Margin="5 0 5 10">
                     2. dla ρ≥0,01, K<Run FontSize="7" BaselineAlignment="Subscript">s</Run>=0.
            </TextBlock>

            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.7*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Margin="5 0 5 2" FontSize="9" >
                        ρ=
                    </TextBlock>
                    <TextBlock Margin="5 0 5 2" FontSize="9" >
                        K<Run FontSize="7" BaselineAlignment="Subscript">s</Run>=
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBox FontSize="9" Background="Gainsboro" Margin="0 1 0 2" Text="{Binding BasicCalculations.Ro, Mode=OneWay}" IsReadOnly="True"  />
                    <TextBox FontSize="9" Background="Beige" Margin="0 1 0 2" Text="{Binding Column.SecondOrderParameters.Ks}"  />
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Margin="8 3 5 2" FontSize="9" Text="[-]" />
                    <TextBlock Margin="8 3 5 2" FontSize="9" Text="[-]" />
                </StackPanel>
            </Grid>
        </StackPanel>
        
    </Border>
</Window>
